<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_book_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/orange"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="120dp"
         android:contentDescription="livres image" />


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxLength="30"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxLength="30"
            android:textColor="@color/white"
            android:text="Category"/>

        <TextView
            android:id="@+id/short_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:maxLines="2"
            android:ellipsize="end"
            android:maxLength="50"
            android:textColor="@color/white"
            android:text="Lorem ipsum dolor sit amet consectetur adipisicing elit. Ullam temporibus quod accusamus sed molestias quaerat ipsam consequuntur nobis debitis laboriosam consequatur minima laborum, cumque inventore possimus culpa beatae ex autem."/>
    </LinearLayout>

</androidx.cardview.widget.CardView>